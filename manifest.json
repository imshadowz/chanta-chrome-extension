{
  "manifest_version": 2,
  "name": "Chanta",
  "short_name": "chanta",
  "description": "Jitta helper in chrome extension",
  "version": "0.2.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "https://www.jitta.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.jitta.com/portfolio/*"
      ],
      "js": [
        "lib/jquery-3.1.1.min.js",
        "portfolio.js"
      ],
      "css": [
        "portfolio.css"
      ]
    }
  ]
}